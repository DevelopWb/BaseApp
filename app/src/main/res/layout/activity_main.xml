<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">


    <FrameLayout
        android:id="@+id/content_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation_bottom">

        <com.appmodle.viewPage.MyViewPage
            android:id="@+id/main_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.appmodle.viewPage.MyViewPage>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/navigation_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_weight="0"
        android:orientation="horizontal">
        <!--模块一-->
        <LinearLayout

            android:id="@+id/navigation_line1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navigation_img1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/navigation_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="配送"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
        <!--模块二-->
        <LinearLayout
            android:id="@+id/navigation_line2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navigation_img2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/navigation_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="商城"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>    <!--模块二-->
